@model AdelfyStore.Models.UserLogin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Adelfi</title>
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- chartist CSS -->

    <link href="~/css/main.css" rel="stylesheet" type="text/css">
    <link href="~/css/util.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body >
    <div class="login-form">
        <div class="container">
            @using (Html.BeginForm("Login", "Home"))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)
                <div class="text-center m-b-20 col-md-12">
                    <img src="http://zerozone.com/sbv/Adelfi/images/icons/logo-2.jpg" alt="Adelfi" />
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control custom-input", placeholder = @Html.DisplayNameFor(m => m.UserName) })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control custom-input search pass", placeholder = @Html.DisplayNameFor(m => m.Password) })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <div class="login">
                    <input type="submit" name="Login" class="login-custom flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" value="Login" />
                </div>
                <h4 class="login-error">@ViewBag.msg</h4>
            }
        </div>
    </div>
</body>
</html>

