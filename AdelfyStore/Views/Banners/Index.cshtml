@model IEnumerable<AdelfyStore.Models.TblBanner>
@using AdelfyStore.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0"> Banners </h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Banners</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 align-self-center">
            <a href="@Url.Action("Edit", "StoreInformations", new { id = Convert.ToInt32(BaseUtil.GetSessionValue(AdminInfo.StoreID.ToString())) })" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Back To Store</a>
            <a href="@Url.Action("Create", "Banners")" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down m-r-5"> Add Banner</a>
        </div>
    </div>

    <div class="row">
        <!-- column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                   <div class="table-responsive">
					 @{
                            if (Model.Count() == 0)
                            {
                                <h4>No records found</h4>
                            }
                            else
                            {
                        <table id="MyTable" class="table table-border table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.SrNumber)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                    </th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                           
                            <tbody>                                
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.SrNumber)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActive)
                                        </td>

                                        <td>
                                            @item.CreatedDate.ToString("MM/dd/yyyy")
                                        </td>

                                        <td>
                                            <a class="btn waves-effect waves-light btn-success hidden-sm-down m-r-5" href="@Url.Action("Edit", "Banners", new { id = item.BannerID })"><i class="fas fa-pencil-alt"></i></a>

                                            <a class="btn waves-effect waves-light btn-danger hidden-sm-down" href="javascript:void(0)" onclick="RecordDelete(@item.BannerID,'TblBanners')"><i class="fas fa-trash-alt"></i></a>

                                        </td>
                                    </tr>
                                }
								
                            </tbody>
                        </table>
						}
					}	
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  <script>
    $(function(){
        $("#MyTable").dataTable();
    })
  </script>
