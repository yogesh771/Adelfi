@model IEnumerable<AdelfyStore.Models.sp_TpViewedproducts_Result>
@{
    ViewBag.Title = "TopViewed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using AdelfyStore.Models;
@{ var Domainpath = BaseUtil.GetWebConfigValue("DomainUrl").ToString();}
<div class="container-fluid">

    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Top Viewed Products</h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Attributes</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 align-self-center">
            <a href="@Url.Action("Edit", "StoreInformations", new { id = Convert.ToInt32(BaseUtil.GetSessionValue(AdminInfo.StoreID.ToString())) })" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Back To Store</a>
        </div>
    </div>

    <div class="row">
        <!-- column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div class="table-responsive">
					 @{
                            if (Model.Count() == 0)
                            {
                                <h4>No records found</h4>
                            }
                            else
                            {
                        <table id="MyTable" class="table table-border table-hover">
                            <thead>
                                <tr>

                                    <th>
                                        Product Name
                                    </th>
                                   
                                    <th>Views</th>
                                    <th>
                                        Supplier Name
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.productTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Views)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                   

                                </tr>
                                }
                            </tbody>

                        </table>
						}
						}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        //$("#MyTable").dataTable();
        $('#MyTable').DataTable({
            "order": [[2, "desc"]]
        });
    })
</script>

