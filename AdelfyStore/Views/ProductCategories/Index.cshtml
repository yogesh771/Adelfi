@model IEnumerable<AdelfyStore.Models.TblProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Product Categories</h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Company Type</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 align-self-center">
            <a href="@Url.Action("Create", "ProductCategories")" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Add Product Category</a>
        </div>
    </div>

    <div class="row">
        <!-- column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div class="table-responsive">
					 @{
                            if (Model.Count() == 0)
                            {
                                <h4>No records found</h4>
                            }
                            else
                            {
                        <table id="MyTable" class="table table-border table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CategoryName)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        <a class="btn waves-effect waves-light btn-success hidden-sm-down m-r-5" href="@Url.Action("Edit", "ProductCategories", new { id = item.ProductCategoryId })"><i class="fas fa-pencil-alt"></i></a>

                                        <a class="btn waves-effect waves-light btn-danger hidden-sm-down" href="javascript:void(0)" onclick="RecordDelete(@item.ProductCategoryId,'TblProductCategories')"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                            </tbody>

                        </table>
						}
						}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  <script>
    $(function(){
        $("#MyTable").dataTable();
    })
  </script>