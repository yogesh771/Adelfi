@model AdelfyStore.Models.orderHistoryStatus
@{
    ViewBag.Title = "changeOrderStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Update Order Status </h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Update Order Status</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 text-right">

            <a href="@Url.Action("Details", "ReportOrderHistories", new { id=Model.OrderID})" class="btn waves-effect waves-light btn-danger hidden-sm-down"> Back To Order</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-xlg-12 col-md-12">
            <div class="card w-50-m-0auto">
                <div class="card-block">
                    @using (Html.BeginForm("changeOrderStatus", "ReportOrderHistories", FormMethod.Post, new { @class = "form-horizontal form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.OrderID)
                        <div class="form-group">
                            <label class="col-sm-12">
                                @Html.LabelFor(model => model.OrderStatusID)
                            </label>
                            <div class="col-sm-12">
                                @Html.DropDownList("OrderStatusID", null, htmlAttributes: new { @class = "form-control form-control-line" })
                                @Html.ValidationMessageFor(model => model.OrderStatusID, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 text-right">
                                <input type="submit" value="Update" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
