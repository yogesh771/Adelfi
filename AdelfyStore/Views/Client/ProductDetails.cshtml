
@model AdelfyStore.Models.CompleteProductInfo
@using AdelfyStore.Models;
@{ var Domainpath = BaseUtil.GetWebConfigValue("DomainUrl").ToString();}
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
    <a href="/" class="s-text16">
        Home
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <span class="s-text17">
        @Model.TblProduct.ProductName
    </span>
</div>

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>

                <div class="slick3">
                    @{ foreach (var image in Model.tblProductImages.OrderBy(e=>e.orderNo))
                        {
                            <div class="item-slick3" data-thumb="@Domainpath/@image.ProductImageURL">
                                <div class="wrap-pic-w">
                                    <img src="@Domainpath/@image.ProductImageURL" alt="@Model.TblProduct.ProductName" id="imgurl">
                                </div>
                            </div>
                           
                        }

                    }

                </div>
            </div>
        </div>

        <div class="w-size14 p-t-30 respon5">
            <h4 class="product-detail-name m-text16 p-b-13" id="product_Title">
                @Model.TblProduct.productTitle
            </h4>
            <input type="hidden" value="@Model.TblProduct.ProductID" id="hdnproductID" />

            
             @{if (Model.TblProduct.TblStoreInformation.PriceDispay)
                { <span class="m-text17" >
                        $<i id="hdnprice">@Model.TblProduct.Price.ToString()</i>
                    </span>

                }
                else
                { <span class="m-text17" >
                     <i id="hdnprice"></i>
                    </span>

                }
            }
           

            <!--  -->
            <div class="p-t-30 p-b-15">
                @Html.Action("Partial_productAttribute", new { ProductId = Model.TblProduct.ProductID })


                <div class="flex-r-m flex-w p-t-10">
                    <div class="w-size100 flex-m flex-w">

                        <div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
                            <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                            </button>

                            <input class="size8 m-text18 t-center num-product" type="number" name="num-product" value="1">

                            <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
                            <!-- Button -->
                            <button id="addtoCart" onclick="addtocart()" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="p-b-20">
                <span class="s-text8 m-r-35">SKU: @Model.TblProduct.sku</span>
                <span class="s-text8">Categories: @Model.TblProduct.TblProductCategory.CategoryName</span>
            </div>

            <!--  -->
            <div class="wrap-dropdown-content bo6 p-t-15 p-b-14 active-dropdown-content">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Description
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        @Html.Raw(Model.TblProduct.descriptionHtml)
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Additional Information
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        @Html.Raw(Model.TblProduct.AdditionalInforamtion)
                    </p>
                </div>
            </div>

            
        </div>
    </div>
</div>



