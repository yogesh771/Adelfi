@model IEnumerable<AdelfyStore.Models.TblOrderHistory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Order History</h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Order History</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 align-self-center">
            @*<a href="@Url.Action("Index", "StoreInformations")" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Back To Stores</a>*@

        </div>
    </div>

    <div class="row">
        <!-- column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div class="table-responsive">
					 @{
                            if (Model.Count() == 0)
                            {
                                <h4>No records found</h4>
                            }
                            else
                            {
                        <table id="MyTable" class="table table-border table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        #@Html.DisplayNameFor(model => model.OrderID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OrderByName)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.TblProduct.ProductName)
                                    </th>


                                    <th>
                                        @Html.DisplayNameFor(model => model.TblStoreInformation.StoreName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TblOrderStatu.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderByName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TblProduct.ProductName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TblStoreInformation.StoreName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TblOrderStatu.Status)
                                    </td>

                                    <td>
                                        @item.CreatedDate.ToString("MM/dd/yyyy")
                                    </td>
                                    <td>
                                        <a class="btn waves-effect waves-light btn-info hidden-sm-down" href="@Url.Action("Details", "ReportOrderHistories", new { id = item.OrderID })"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
						}
						}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function(){
        $("#MyTable").dataTable();
    })
</script>
