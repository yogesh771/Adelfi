@model IEnumerable<AdelfyStore.Models.TblCompanyType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">

        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0">Company Type</h3>
                <!-- <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Category Type</li>
                </ol> -->
            </div>
            <div class="col-md-7 col-4 align-self-center">
                <a href="@Url.Action("Create", "CompanyTypes")" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Add Comapny Type</a>
            </div>
        </div>

        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">                                         
                       <div class="table-responsive">
					 @{
                            if (Model.Count() == 0)
                            {
                                <h4>No records found</h4>
                            }
                            else
                            {
                        <table id="MyTable" class="table table-border table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CompanyType)
                                        </th>
                                        
                                        <th>Action</th>
                                    </tr>
                                </thead>
                               
                                <tbody>
                                    
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CompanyType)
                                            </td>
                                           
                                            <td>
                                                <a class="btn waves-effect waves-light btn-success hidden-sm-down m-r-5" href="@Url.Action("Edit", "CompanyTypes", new { id = item.CompanyTypeID })"><i class="fas fa-pencil-alt"></i></a>
                                                <a class="btn waves-effect waves-light btn-danger hidden-sm-down" href="javascript:void(0)" onclick="RecordDelete(@item.CompanyTypeID,'TblCompanyType')"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
							}
							}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <script>
    $(function(){
        $("#MyTable").dataTable();
    })
  </script>