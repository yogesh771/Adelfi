@model AdelfyStore.Models.TblOrderHistory
@using AdelfyStore.Models;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Order Details </h3>
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Order History </a></li>
                <li class="breadcrumb-item active">Order Information</li>
            </ol> -->
        </div>
        <div class="col-md-7 col-4 text-right">
            <a href="@Url.Action("changeOrderStatus", "ReportOrderHistories", new { id =Model.OrderID  })" class="btn waves-effect waves-light btn-danger hidden-sm-down m-r-5"> Change Order Status</a>
            <a href="@Url.Action("Index", "ReportOrderHistories", new { id = Model.StoreId })" class="btn waves-effect waves-light btn-danger m-r-5 hidden-sm-down"> Back To Order List</a>
			<a href="@Url.Action("Edit", "StoreInformations", new { id =  Model.StoreId })" class="btn waves-effect waves-light btn-danger hidden-sm-down"> Back To Store</a>
